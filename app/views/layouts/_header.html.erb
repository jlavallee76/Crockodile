<!-- Header   -->
<div class="bg-green-800 p-4 flex justify-between items-center">
  <!-- Left Side Nav -->
  <div class="flex items-center text-xl font-semibold ">
    <%= link_to image_tag("logo_yellow.png", width: 125, alt:"logo"), root_path, class: "transition ease-in hover:opacity-75 duration-200" %>
    <%= link_to "Home", root_path, class:"inline-block ml-12 p-2 pr-4 text-gray-50 hover:text-green-400" %>
    <%= link_to "Meals", products_path, class:"inline-block ml-6 p-2 pr-4 text-gray-50 hover:text-green-400" %>
    <%= link_to "Categories", categories_path, class:"inline-block ml-6 p-2 pr-4 text-gray-50 hover:text-green-400" %>
    <%= link_to "About", about_path, class:"inline-block ml-6 p-2 pr-4 text-gray-50 hover:text-green-400" %>
    <%= link_to "Contact", contact_path, class:"inline-block ml-6 p-2 pr-4 text-gray-50 hover:text-green-400 "%>
  </div>

  <!-- Right Side Nav -->
  <div class="text-xl font-semibold flex items-center mr-16">
    <% if user_signed_in? %>
      <%= link_to "Log Out", destroy_user_session_path, method: :delete, class:"inline-block p-2 mr-2 text-gray-50 hover:text-green-400" %>
      <%= link_to 'Account', edit_user_registration_path, class: "inline-block font-bold py-2 px-4 bg-yellow-300 rounded hover:bg-yellow-400 transition ease-in duration-200" %>
    <% else %>
      <%= link_to "Sign In", new_user_session_path, class:"inline-block p-2 mr-2 text-gray-50 hover:text-green-400" %>
      <%= link_to "Sign up", new_user_registration_path, class:"text-green-800 font-bold inline-block py-2 px-4 bg-yellow-300 rounded hover:bg-yellow-200 transition ease-in duration-200" %>
    <% end %>


      <ul class="flex items-center">
        <li class="flex ml-4 text-yellow-400 font-bold">
          <%= link_to image_tag("cart_icon.png", width: 32, alt:"logo"), cart_path, class: "transition ease-in hover:opacity-75 duration-200 ml-6" %>
          <sup class="rounded-full h-4 w-4 flex items-center justify-center text-green-800 bg-yellow-400 font-bold"><%= session[:cart_size] %></sup>
        </li>
      </ul>

  </div>
</div>