<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="bg-grey-lighter min-h-screen flex flex-col">
    <div class="container max-w-sm mx-auto flex-1 flex flex-col items-center justify-center px-2">
      <div class="bg-white border-green-800 border-2 border-opacity-50 px-6 py-8 rounded shadow-lg text-black w-full">
          <h1 class="mb-8 text-3xl text-center">Sign up</h1>

          <%= f.input :email,
                      required: true,
                      label: false,
                      autofocus: true,
                      input_html: { autocomplete: "email",
                                    class: "block border border-grey-light focus:border-green-800 w-full p-3 rounded mb-4",
                                    placeholder: "Email" }%>

          <%= f.input :password,
                      required: true,
                      label: false,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password",
                                    class: "block border border-grey-light focus:border-green-800 w-full p-3 rounded mb-4",
                                    placeholder: "Password" } %>

          <%= f.input :password_confirmation,
                      required: true,
                      label: false,
                      input_html: { autocomplete: "new-password",
                                    class: "block border border-grey-light focus:border-green-800 w-full p-3 rounded mb-4",
                                    placeholder: "Confirm Password" } %>
          <button type="submit" class="w-full p-3 rounded bg-green-800 font-semibold text-white hover:bg-green-600">Create Account</button>

            <div class="text-center text-sm text-grey-dark mt-4">
                By signing up, you agree to the
                <a class="no-underline border-b border-grey-dark text-grey-dark text-green-800 font-semibold" href="#">
                    Terms of Service
                </a> and
                <a class="no-underline border-b border-grey-dark text-grey-dark text-green-800 font-semibold" href="#">
                    Privacy Policy
                </a>
            </div>
        </div>

        <div class="text-grey-dark mt-6">
            Already have an account?
            <%= link_to "Sign In", new_user_session_path, class:"text-lg font-semibold inline-block text-green-800 hover:text-green-400" %>
        </div>
    </div>
  </div>
<% end %>
